<Window x:Class="Scoreboard.ScoreboardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scoreboard"
        mc:Ignorable="d"
        Title="Scoreboard {Screen}" Height="600" Width="1024" WindowStartupLocation="CenterOwner" WindowStyle="None" Background="#FF333333" Closing="Window_Closing" ShowInTaskbar="False" MouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewKeyDown="Window_PreviewKeyDown">

   <WindowChrome.WindowChrome>
      <WindowChrome CaptionHeight="0"/>
   </WindowChrome.WindowChrome>


   <Grid x:Name="ScreenWindow">
      <DockPanel x:Name="ScreenWindowContent">

      </DockPanel>

      <DockPanel HorizontalAlignment="Right" VerticalAlignment="top" Height="30">
         <Button x:Name="b_fullscreen" Style="{StaticResource btn-ctrl}" Content="" Width="45" FontFamily="Segoe MDL2 Assets" FontSize="16" Click="b_fullscreen_Click"/>
         <Button x:Name="b_exit" Style="{StaticResource btn-ctrl}" Content="" Width="45" FontFamily="Segoe MDL2 Assets"  FontSize="11" Click="b_exit_Click" />
      </DockPanel>
   </Grid>
</Window>
