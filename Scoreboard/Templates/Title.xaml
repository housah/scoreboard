<UserControl x:Class="Scoreboard.Title"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scoreboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

   <Viewbox Stretch="Uniform" Margin="30">
      <Grid>
         <Label x:Name="eventName" Content="EventName" FontSize="50" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontWeight="Medium" Margin="0, -40, 0, 0"/>

         <Label x:Name="eventFase" Content="EventFase" FontSize="35" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" Margin="0,40,0,0" />
      </Grid>
   </Viewbox>
</UserControl>
